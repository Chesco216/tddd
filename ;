import { TaskCard } from "../TaskCard/TaskCard"
import { tasks } from "../../assets/tasks"
import styles from './TaskGrid.module.css'

export const TaskGrid = () => {
  return (
    <div className={styles.container}>
      <div>
        {
          tasks.map( task => 
